		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest --run",
		"db:reset": "tsx src/lib/database/reset.ts",
		"db:migrate": "tsx src/lib/database/migrateUp.ts --verbose",
		"script:fake_users": "tsx src/lib/scripts/fake_users.ts",
		"script:prod_socket_server": "node --env-file=.env ./prod-socket-server",
		"script:fake_users_prod": "node fake_user.cjs"
	},
